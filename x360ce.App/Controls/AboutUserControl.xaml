<UserControl
    x:Class="x360ce.App.Controls.AboutUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="UserControl_Loaded"
    Unloaded="UserControl_Unloaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--Icon-->
            <ContentControl
                Name="RightIcon"
                Grid.RowSpan="3"
                Width="48"
                Height="48"
                Margin="8,2,4,4"
                VerticalAlignment="Top"
                Content="{StaticResource Icon_gamepad}" />
            <!--Title and Description-->
            <Label
                Name="AboutProductLabel"
                Grid.Column="1"
                Padding="4,8,0,0"
                Content="XBOX 360 Controller Emulator {0}"
                FontWeight="Bold" />
            <Label
                Name="AboutDescriptionLabel"
                Grid.Row="1"
                Grid.Column="1"
                Padding="4,0,0,0"
                Content="Settings editor and test application for XBOX 360 Controller Emulator" />

            <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1">
                <StackPanel.Resources>
                    <Style TargetType="Label">
                        <Setter Property="Padding" Value="8,0,4,0"/>
                    </Style>
                    <Style TargetType="Hyperlink">
                        <Setter Property="TextDecorations" Value="None"/>
                        <EventSetter Event="RequestNavigate" Handler="HyperLink_RequestNavigate"/>
                    </Style>
                </StackPanel.Resources>

                <!--x360ce Homepage-->
                <Label Content="Homepage"/>
                <TextBlock>
                    <Hyperlink NavigateUri="https://www.x360ce.com">
                        x360ce.com
                    </Hyperlink>
                </TextBlock>

                <!--GitHub Project-->
                <Label Content="GitHub" />
                <TextBlock>
                   <Hyperlink NavigateUri="https://github.com/x360ce/x360ce">
                      github.com/x360ce/x360ce
                   </Hyperlink>
                </TextBlock>

                <!--ViGEm-->
                <Label  Content="ViGEm" />
                <TextBlock>
                    <Hyperlink NavigateUri="https://vigembusdriver.com">
                        vigembusdriver.com
                    </Hyperlink>
                </TextBlock>

                <!--ToCA EDIT-->
                <Label Content="ToCA EDIT" />
                <TextBlock>
                    <Hyperlink NavigateUri="http://www.tocaedit.com">
                        tocaedit.com
                    </Hyperlink>
                </TextBlock>

                <!--Jocys.com-->
                <Label Content="Jocys.com" />
                <TextBlock>
                    <Hyperlink NavigateUri="https://www.jocys.com">
                        jocys.com
                    </Hyperlink>
                </TextBlock>

                <!--Nucleoprotein-->
                <Label Content="Nucleoprotein" />
                <TextBlock>
                    <Hyperlink NavigateUri="https://github.com/nucleoprotein">
                        github.com/nucleoprotein
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>

        <TabControl Name="AboutTabControl" Grid.Row="1" Margin="3">
            <TabItem Name="ChangesTabPage" Header="Changes" Background="White">
                <TextBox
                    Name="ChangeLogTextBox"
                    Margin="0"
                    Padding="6"
                    SnapsToDevicePixels="True"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Top"
                    Background="White"
                    IsReadOnly="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    TextWrapping="Wrap">
                    <TextBox.Resources>
                        <Style TargetType="Border"/>
                    </TextBox.Resources>
                </TextBox>
            </TabItem>
            <TabItem Name="LicenseTabPage" Background="White" Header="License">
                <TextBox
                    Name="LicenseTextBox"
                    Margin="0"
                    Padding="6"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Top"
                    Background="White"
                    IsReadOnly="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    TextWrapping="Wrap">
                    <TextBox.Resources>
                        <Style TargetType="Border" />
                    </TextBox.Resources>
                    <TextBox.OpacityMask>
                        <VisualBrush>
                            <VisualBrush.Visual>
                                <Border
                                    Width="{Binding ActualWidth, ElementName=LicenseTextBox}"
                                    Height="{Binding ActualHeight, ElementName=LicenseTextBox}"
                                    Background="White"
                                    CornerRadius="0,5,5,5"
                                    SnapsToDevicePixels="True" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </TextBox.OpacityMask>
                </TextBox>
            </TabItem>
            <TabItem Name="IconExperienceTabPage" Header="IconExperience License">
                <TextBox
                    Name="IconExperienceTextBox"
                    Margin="0"
                    Padding="6"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Top"
                    Background="White"
                    IsReadOnly="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    TextWrapping="Wrap">
                    <TextBox.Resources>
                        <Style TargetType="Border" />
                    </TextBox.Resources>
                    <TextBox.OpacityMask>
                        <VisualBrush>
                            <VisualBrush.Visual>
                                <Border
                                    Width="{Binding ActualWidth, ElementName=IconExperienceTextBox}"
                                    Height="{Binding ActualHeight, ElementName=IconExperienceTextBox}"
                                    Background="White"
                                    CornerRadius="0,5,5,5"
                                    SnapsToDevicePixels="True" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </TextBox.OpacityMask>
                </TextBox>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
