<UserControl
    x:Class="x360ce.App.Controls.PadItem_AdvancedControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="UserControl_Loaded"
    Unloaded="UserControl_Unloaded"
    mc:Ignorable="d">
    <Grid>
        <GroupBox HorizontalAlignment="Left" VerticalAlignment="Top" Header="Device">
            <StackPanel>
                <CheckBox Name="ForceFeedbackPassThroughCheckBox" Content="Force Feedback Pass Through" />
                <CheckBox Name="PassThroughCheckBox" Content="Pass Through" />
                <Label Name="DeviceSubTypeLabel" Content="Device Sub Type:" />
                <ComboBox Name="DeviceSubTypeComboBox" />
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
