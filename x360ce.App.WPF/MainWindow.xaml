                </StackPanel>
            </Button>
            <Button Margin="0,6,6,0" Content="Load Preset..." Width="90" />
            <Button Margin="0,6,6,0" Content="Auto" Width="50" />
            <Button Margin="0,6,6,0" Content="Clear" Width="50" />
            <Button Margin="0,6,6,0" Content="Reset" Width="50" />
            <Button Margin="0,6,6,0" Content="Save" Width="50" />
        </StackPanel>

        <Controls:DeviceTabControl DockPanel.Dock="Bottom" />

